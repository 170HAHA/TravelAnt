<html lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=GBK">
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TravelAnt</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="css/mystyles.css" rel="stylesheet">
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <link href="css/bootstrap-social.css" rel="stylesheet">
    <link href="css/simple-sidebar.css" rel="stylesheet">
</head>

<body>
    

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                {{#user}}
                <img class="img-circle" src="{{userImg}}"/>
                <div>
                    {{userName}}
                </div>
                {{/user}}
            </li>
            <li>
                <a href="/index">Home</a>
            </li>
            <li>
                <a href="/myfriends">My Friends</a>
            </li>
            <li>
                <a href="/settings">Settings</a>
            </li>
            <li class = "hidden">
                <a href="/help">Help</a>
            </li>
            <li>
                <a href="/logOut">Log Out</a>
            </li>
        </ul>
    </div>

    <div id="page-content-wrapper">
        <nav class="navbar navbar-default navbar-fixed-top navbar-custom">
            <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" style="color:#FF6600">
                        <span class="sr-only">Toggle navigation</span><i class="fa fa-plus"></i>
                    </button>
                    <a class="navbar-brand" id="app-name" href="/index"><span style="padding-right: 10px;background-color: transparent;"><button type="button" id="menu-button">
                    	<i class="fa fa-bars"></i>
                    </button></span>TravelAnt</a>
                </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right title-add">
                        <li class="hidden">
                            <a href="#page-top"></a>
                        </li>
                        <li>
                            <a href="/addTrip"><i class="fa fa-plane"></i> Add trip</a>
                        </li>
                        <li>
                            <a href="/addFriend"><i class="fa fa-user"></i> Add friend</a>
                        </li>
                    </ul>
                </div>
            <!-- /.navbar-collapse -->
            </div>
        <!-- /.container-fluid -->
        </nav>
    
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-10 col-sm-push-1 col-lg-10 page-content">
                    <h1>My Trips</h1>
                    <div class="trip-list">
                        {{#if hasTrip}}
                        <ul>
                            {{#trip}}
                            {{#each finishedTrip}}
                            <div class="well well-lg">
                                <div class="trip-content">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-7 trip-detail">
                                            <div class="trip-name"><h3>{{tripName}}</h3><h4>, {{tripLocation}}</h4><br/></div>
                                            <div class="trip-date"><h4>{{dateFormat tripStartDate 'll'}} - {{dateFormat tripEndDate 'll'}}</h4></div>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 trip-progress">
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%; float:right;">
                                                </div>
                                            </div>
                                            <div class="trip-due">
                                                <i>Due {{dateFormat voteDue 'll'}}</i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row trip-foot">
                                        <div class="col-xs-12 col-sm-7 trip-member">
                                            {{#each _participants}}
                                            <img src={{imgURL}} class="img-circle"/>
                                            
                                            {{/each}}
                                            <a href="/index" class="invisible"><i class="fa fa-chevron-down profile-down"></i></a>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 trip-progress-enter">
                                            <div class="trip-enter">
                                                <a href="/plan/{{_id}}" role="button" class="btn btn-warning trip-button trip-button-plan">
                                                    Plan
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{#each unfinishedTrip}}
                            <div class="well well-lg">
                                <div class="trip-content">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-7 trip-detail">
                                            <div class="trip-name"><h3>{{tripName}}</h3><h4>, {{tripLocation}}</h4><br/></div>
                                            <div class="trip-date"><h4>{{dateFormat tripStartDate 'll'}} - {{dateFormat tripEndDate 'll'}}</h4></div>
                                        </div>
                                    </div>
                                    <div class="row trip-foot">
                                        <div class="col-xs-12 col-sm-7 trip-member">
                                            {{#each _participants}}
                                            <img src={{imgURL}} class="img-circle"/>
                                            
                                            {{/each}}
                                            <a href="/index.html" class="invisible"><i class="fa fa-chevron-down profile-down"></i></a>
                                        </div>
                                        <div class="col-xs-12 col-sm-5 trip-progress-enter">
                                            <div class="trip-enter">
                                                <a href=plan/{{_id}} role="button" class="btn btn-warning trip-button trip-button-view">
                                                    View
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </ul>
                        {{/trip}}
                        {{else}}
                        <div class="noActivity">You don't have any trips. </br>Add some Trip!</div>
                        {{/if}}
                    </div>
                        


                </div>
            </div>
        </div>
    </div>
</div>
    




    <script src="js/jquery.js"></script>
    <script src="js/tripPage.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <script>
//    $("#wrapper").toggleClass("toggled");
    $("#menu-button").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
</body>
